<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <virtualType name="RazorpayLogger" type="Magento\Framework\Logger\Monolog">
	    <arguments>
	        <argument name="handlers" xsi:type="array">
	            <item name="error" xsi:type="object">Razorpay\Subscription\Logger\Logger</item>
	        </argument>
	    </arguments>
	</virtualType>

    <type name="Razorpay\Subscription\Observer\CheckoutCartProductAddAfterObserver">
        <arguments>
            <argument name="logger" xsi:type="object">RazorpayLogger</argument>
        </arguments>
    </type>

    <type name="Razorpay\Subscription\Observer\RestrictRecurringProductToCartObserver">
        <arguments>
            <argument name="logger" xsi:type="object">RazorpayLogger</argument>
        </arguments>
    </type>
</config>
